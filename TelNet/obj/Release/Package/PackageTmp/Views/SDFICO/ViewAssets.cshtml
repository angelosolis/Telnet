    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
</head>
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Asset Accounting Section -->
                <div id="assetAccounting">
                    <h3>Asset Accounting</h3>
                    <!-- Assets Table -->
                    <div class="card mb-3">
                        <div class="card-header">Assets</div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="assetType">Asset Type:</label>
                                <select id="assetType" name="assetType" class="form-control">
                                    <option value="all">All</option>
                                    <option value="computer">Computer</option>
                                    <option value="vehicle">Vehicle</option>
                                    <option value="equipment">Equipment</option>
                                    <!-- Add more options as needed -->
                                </select>
                            </div>
                            <!-- Acquisition Date Range Filter -->
                            <div class="form-group">
                                <label for="acquisitionDateRange">Acquisition Date Range:</label>
                                <input type="date" id="startDate" name="startDate"> <!-- Start Date -->
                                <span class="mx-2">to</span>
                                <input type="date" id="endDate" name="endDate"> <!-- End Date -->
                            </div>
                            <table class="table" id="assetTable">
                                <thead>
                                    <tr>
                                        <th>Asset ID</th>
                                        <th>Description</th>
                                        <th>Acquisition Date</th>
                                        <th>Current Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Fake data for assets -->
                                    <tr>
                                        <td>A001</td>
                                        <td>Desktop Computer</td>
                                        <td>2024-01-15</td>
                                        <td>P800</td>
                                    </tr>
                                    <tr>
                                        <td>A002</td>
                                        <td>Delivery Van</td>
                                        <td>2024-03-20</td>
                                        <td>P15,000</td>
                                    </tr>
                                    <tr>
                                        <td>A003</td>
                                        <td>Industrial Printer</td>
                                        <td>2024-05-10</td>
                                        <td>P3,500</td>
                                    </tr>
                                    <!-- Add more rows as needed -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Export Assets -->
                    <div class="card mb-3">
                        <div class="card-header">Export Assets</div>
                        <div class="card-body">
                            <button class="btn btn-primary" onclick="exportToCSV()">Export to CSV</button>
                            <button class="btn btn-primary" onclick="exportToPDF()">Export to PDF</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    window.jsPDF = window.jspdf.jsPDF;

    let table = new DataTable('#assetTable');

    // Function to export table data to CSV
    function exportToCSV() {
        // Get the table element
        var table = document.getElementById('assetTable');

        // Initialize empty CSV string
        var csv = '';

        // Loop through rows
        for (var i = 0; i < table.rows.length; i++) {
            var row = table.rows[i];

            // Loop through cells in the row
            for (var j = 0; j < row.cells.length; j++) {
                // Add cell value to CSV string
                csv += row.cells[j].innerText.trim() + ',';
            }

            // Add new line character after each row
            csv += '\n';
        }

        // Initiate download
        var blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        var link = document.createElement('a');
        if (link.download !== undefined) { // feature detection
            var url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', 'asset_data.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    }

    // Function to export table data to PDF
    function exportToPDF() {
        // Initialize jsPDF
        const doc = new jsPDF();

        // Add table data to PDF
        doc.autoTable({
            html: '#assetTable'
        });

        // Save PDF
        doc.save('asset_data.pdf');
    }

    document.addEventListener('DOMContentLoaded', function () {
        // Add event listener to the element with the ID 'exportPDF'
        var exportPDFButton = document.getElementById('exportPDF');
        if (exportPDFButton) {
            exportPDFButton.addEventListener('click', function () {
                exportToPDF(); // Call exportToPDF function
            });
        }

        // Add event listener to the element with the ID 'exportCSV'
        var exportCSVButton = document.getElementById('exportCSV');
        if (exportCSVButton) {
            exportCSVButton.addEventListener('click', function () {
                exportToCSV(); // Call exportToCSV function
            });
        }
    });
</script>
