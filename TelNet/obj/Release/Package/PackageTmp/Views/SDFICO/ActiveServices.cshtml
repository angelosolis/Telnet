    <script>
        window.jsPDF = window.jspdf.jsPDF;

        function showBillingHistoryModal(customerName, accountNumber) {
            $('#customerName').text(customerName);
            $('#accountNumber').text(accountNumber);
            $('#billingHistoryModal').modal('show');

            // Generate fake billing history
            var billingHistory = generateFakeBillingHistory();
            displayBillingHistory(billingHistory);
        }

        function generateFakeBillingHistory() {
            var billingHistory = [];
            var numberOfInvoices = Math.floor(Math.random() * 5) + 1; // Generate between 1 to 5 invoices

            for (var i = 1; i <= numberOfInvoices; i++) {
                var invoiceNumber = Math.floor(Math.random() * 10000) + 1000; // Generate random 4-digit invoice number
                var dateGenerated = randomDate(new Date(2023, 0, 1), new Date()); // Generate random date between 2022-01-01 and current date
                var amount = (Math.random() * 5000 + 1250).toFixed(2); // Generate random amount between 50 and 550
                var status = Math.random() < 0.5 ? 'Paid' : 'Unpaid'; // Randomly generate 'Paid' or 'Unpaid' status

                billingHistory.push({
                    invoiceNumber: invoiceNumber,
                    dateGenerated: dateGenerated,
                    amount: amount,
                    status: status
                });
            }

            return billingHistory;
        }

        function displayBillingHistory(billingHistory) {
            var tbody = $('#billingHistoryTableBody');
            tbody.empty();

            billingHistory.forEach(function (invoice) {
                var row = '<tr>' +
                    '<td>' + invoice.invoiceNumber + '</td>' +
                    '<td>' + formatDate(invoice.dateGenerated) + '</td>' +
                    '<td>P' + invoice.amount + '</td>' +
                    '<td>' + invoice.status + '</td>' +
                    '</tr>';

                tbody.append(row);
            });
        }

        function downloadBillingHistoryPDF() {
            const doc = new jsPDF();
            doc.autoTable({ html: '#billingHistoryTable' });
            doc.save('billing_history.pdf');
        }

        function randomDate(start, end) {
            return new Date(start.getTime() + Math.random() * (end.getTime() - start.getTime()));
        }

        function formatDate(date) {
            var options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(date).toLocaleDateString('en-US', options);
        }
    </script>


