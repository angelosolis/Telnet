                </div>

                <!-- Employee Selector -->
                <div class="form-group">
                    <label for="employee">Employee:</label>
                    <select class="form-control" id="employee">
                        <option value="all">All</option>
                        <!-- Add more employee options here if needed -->
                    </select>
                </div>

