                </div>
            </div>

            <div class="col-lg-9">
                <!-- Placeholder for the charts -->
                <div id="chartContainer" class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chart Placeholder</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<script>
    function showAttendanceWorkingHours() {
        // Clear the chart container
        clearChartContainer();

        // Create a fake chart for Attendance & Working Hours
        var ctx = document.getElementById('chartContainer').appendChild(document.createElement('canvas')).getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
                datasets: [{
                    label: 'Working Hours',
                    data: [8, 7, 9, 7.5, 8.5],
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

