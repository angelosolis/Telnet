
@{
    ViewBag.Title = "DataAnalysis";
}


@{
    ViewBag.Title = "TerminationSection";
    Layout = "~/Views/CCAS/_LayoutCCAS.cshtml";
}

<h2>TerminationSection</h2>

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



</head>
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users with Active Service</h5>
                        <p class="card-text"><span id="activeServiceCount" style="font-size: 20px">6</span></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users with Termination Status</h5>
                        <p class="card-text"><span id="terminationStatusCount" style="font-size: 20px">4</span></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users with Blacklist Status</h5>
                        <p class="card-text"><span id="blacklistStatusCount" style="font-size: 20px">3</span></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users who Paid within Dunning Notice (Bar Graph)</h5>
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users on Paid Time Payment (Line Graph)</h5>
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users with Pending Termination Status, Inactive Service, and Dunning Notice (Pie Chart)</h5>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    // Fake data for bar chart
    var barChartData = {
        labels: ['January', 'February', 'March', 'April'],
        datasets: [{
            label: 'Users Paid within Dunning Notice',
            data: [12, 19, 3, 5],
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };

    // Fake data for line chart
    var lineChartData = {
        labels: ['January', 'February', 'March', 'April'],
        datasets: [{
            label: 'Users on Paid Time Payment',
            data: [65, 59, 80, 81],
            fill: false,
            borderColor: 'rgb(75, 192, 192)',
            tension: 0.1
        }]
    };

    // Fake data for pie chart
    var pieChartData = {
        labels: ['Pending Termination', 'Inactive Service', 'Dunning Notice'],
        datasets: [{
            label: 'Users Status',
            data: [30, 40, 30],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)'
            ],
            borderWidth: 1
        }]
    };

    // Bar chart
    var barCtx = document.getElementById('barChart').getContext('2d');
    var barChart = new Chart(barCtx, {
        type: 'bar',
        data: barChartData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Line chart
    var lineCtx = document.getElementById('lineChart').getContext('2d');
    var lineChart = new Chart(lineCtx, {
        type: 'line',
        data: lineChartData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Pie chart
    var pieCtx = document.getElementById('pieChart').getContext('2d');
    var pieChart = new Chart(pieCtx, {
        type: 'pie',
        data: pieChartData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

</script>