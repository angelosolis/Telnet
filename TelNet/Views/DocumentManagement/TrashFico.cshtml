    <!-- Define a custom context menu -->
    <div id="customContextMenu" class="context-menu" style="display: none;">
        <ul>
            <li><a href="#" id="menuOption1">New Folder</a></li>
            <li><a href="#" id="menuOption2">Download</a></li>
            <li><a href="#" id="menuOption3">Cut</a></li>
