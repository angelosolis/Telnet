        </ul>
    </div>


</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
<script>
    $(document).ready(function () {
        // Right-click event handler
        $('#exampleLink').on('contextmenu', function (event) {
            // Prevent the default context menu from appearing
            event.preventDefault();

            // Show the custom context menu at the mouse position
            $('#customContextMenu')
                .css({
                    top: event.pageY + 'px',
                    left: event.pageX + 'px'
                })
                .show();
        });

        // Click event handler to hide the context menu when clicking outside
        $(document).on('click', function (event) {
            if (!$(event.target).closest('#customContextMenu').length) {
                $('#customContextMenu').hide();
            }
        });

        // Context menu item click handlers
        $('#menuOption1').on('click', function () {
            alert('Menu Option 1 clicked');
        });

        $('#menuOption2').on('click', function () {
            alert('Menu Option 2 clicked');
        });

        $('#menuOption3').on('click', function () {
            alert('Menu Option 3 clicked');
        });
    });

</script>



