@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="UTF-8">

    <title>TeleX - Dashboard</title>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
   
    <style>
        .containers {
            max-height: 800px;
            min-width: 1000px;
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            align-items: center;
            margin: 0 auto;
        }

        .border {
            height: 369px;
            width: 290px;
            background: transparent;
            border-radius: 10px;
            transition: border 1s;
            position: relative;
        }

            .border:hover {
                border: 1px solid #fff;
            }

        .card {
            height: 379px;
            width: 300px;
            background: #808080;
            border-radius: 10px;
            transition: background 0.8s;
            overflow: hidden;
            background: #000;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .card0 {
            background: url("https://www.shutterstock.com/image-vector/crm-customer-relationship-management-line-600nw-765034036.jpg") center center no-repeat;
            background-size: 300px;
        }

            .card0:hover {
                background: url("https://www.shutterstock.com/image-vector/crm-customer-relationship-management-line-600nw-765034036.jpg") left center no-repeat;
                background-size: 600px;
            }

                .card0:hover h2 {
                    opacity: 1;
                }

                .card0:hover .fa {
                    opacity: 1;
                }

        .card1 {
            background: url("https://png.pngtree.com/png-clipart/20230923/original/pngtree-provisioning-blue-gradient-concept-icon-general-art-icon-vector-png-image_12733544.png") center center no-repeat;
            background-size: 300px;
        }

            .card1:hover {
                background: url("https://png.pngtree.com/png-clipart/20230923/original/pngtree-provisioning-blue-gradient-concept-icon-general-art-icon-vector-png-image_12733544.png") left center no-repeat;
                background-size: 600px;
            }

                .card1:hover h2 {
                    opacity: 1;
                }

                .card1:hover .fa {
                    opacity: 1;
                }

        .card2 {
            background: url("https://t4.ftcdn.net/jpg/05/31/05/73/360_F_531057396_SH995tQ9H5ObwPwztVm6tb1GtqLqzCh3.jpg") center center no-repeat;
            background-size: 300px;
        }

            .card2:hover {
                background: url("https://t4.ftcdn.net/jpg/05/31/05/73/360_F_531057396_SH995tQ9H5ObwPwztVm6tb1GtqLqzCh3.jpg") left center no-repeat;
                background-size: 600px;
            }

                .card2:hover h2 {
                    opacity: 1;
                }

                .card2:hover .fa {
                    opacity: 1;
                }

        h2 {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            color: #000;
            margin: 20px;
            opacity: 0;
            transition: opacity 1s;
        }

        .fa {
            opacity: 0;
            transition: opacity 1s;
        }

        .icons {
            position: absolute;
            fill: #fff;
            color: #fff;
            height: 130px;
            top: 226px;
            width: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
        }
    </style>

    <script>
        window.console = window.console || function (t) { };
    </script>
    <body translate="no">
        <div class="containers">
            <a href="@Url.Action("CRM", "Home")" class="card card0">
                <div class="card card0">
                    <div class="border">
                        <h2>Customer Relationship Management</h2>
                    </div>
                </div>
            </a>
            <div class="card card1">
                <div class="border">
                    <h2>Provisioning</h2>
                </div>
            </div>
            <div class="card card2">
                <div class="border">
                    <h2>Procurement</h2>
                </div>
            </div>
        </div>
       
    </body>

</head>
</html>