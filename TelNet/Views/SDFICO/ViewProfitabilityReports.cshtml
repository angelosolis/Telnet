@{
    ViewBag.Title = "ProfitabilityAnalysis";
    Layout = "~/Views/SDFICO/_LayoutSDFICO.cshtml";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.13/jspdf.plugin.autotable.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Profitability Analysis Section -->
                <div id="profitabilityAnalysis">
                    <h3>Profitability Analysis</h3>
                    <!-- View Profitability Reports -->
                    <div class="card mb-3">
                        <div class="card-header">View Profitability Reports</div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Revenue</th>
                                        <th>Expenses</th>
                                        <th>Profit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Fake data for profitability reports -->
                                    <tr>
                                        <td>2024-05-01</td>
                                        <td>₱50,000</td>
                                        <td>₱30,000</td>
                                        <td>₱20,000</td>
                                    </tr>
                                    <tr>
                                        <td>2024-05-02</td>
                                        <td>₱60,000</td>
                                        <td>₱40,000</td>
                                        <td>₱20,000</td>
                                    </tr>
                                    <tr>
                                        <td>2024-05-03</td>
                                        <td>₱70,000</td>
                                        <td>₱50,000</td>
                                        <td>₱20,000</td>
                                    </tr>
                                    <!-- Add more rows as needed -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Filter Profitability Reports -->
                    <div class="card mb-3">
                        <div class="card-header">Filter Profitability Reports</div>
                        <div class="card-body">
                            <!-- Date Range Filter -->
                            <div class="form-group">
                                <label for="dateRange">Date Range:</label>
                                <input type="date" id="startDate" name="startDate"> <!-- Start Date -->
                                <span class="mx-2">to</span>
                                <input type="date" id="endDate" name="endDate"> <!-- End Date -->
                            </div>
                            <!-- Product/Service Filter -->
                            <div class="form-group">
                                <label for="productService">Product/Service:</label>
                                <select id="productService" name="productService" class="form-control">
                                    <option value="all">All</option>
                                    <option value="service1">Service 1</option>
                                    <option value="service2">Service 2</option>
                                    <option value="product1">Product 1</option>
                                    <!-- Add more options as needed -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- Export Profitability Reports -->
                    <div class="card mb-3">
                        <div class="card-header">Export Profitability Reports</div>
                        <div class="card-body">
                            <button class="btn btn-primary" onclick="exportToCSV()">Export to CSV</button>
                            <button class="btn btn-primary" onclick="exportToPDF()">Export to PDF</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.jsPDF = window.jspdf.jsPDF;

    // Function to export table data to CSV
    function exportToCSV() {
        // Get the table element
        var table = document.querySelector('#profitabilityAnalysis table');

        // Initialize empty CSV string
        var csv = '';

        // Loop through rows
        for (var i = 0; i < table.rows.length; i++) {
            var row = table.rows[i];

            // Loop through cells in the row
            for (var j = 0; j < row.cells.length; j++) {
                // Add cell value to CSV string
                csv += row.cells[j].innerText.trim() + ',';
            }

            // Add new line character after each row
            csv += '\n';
        }

        // Initiate download
        var blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        var link = document.createElement('a');
        if (link.download !== undefined) { // feature detection
            var url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', 'profitability_reports.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    }

    // Function to export table data to PDF
    function exportToPDF() {
        // Initialize jsPDF
        const doc = new jsPDF();

        // Add table data to PDF
        doc.autoTable({
            html: '#profitabilityAnalysis table'
        });

        // Save PDF
        doc.save('profitability_reports.pdf');
    }
</script>
