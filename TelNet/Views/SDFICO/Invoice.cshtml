
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/SDFICO/_LayoutSDFICO.cshtml";
}

<h2>Invoice</h2>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css">
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.13/jspdf.plugin.autotable.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <style>
        .btn {
            margin-bottom: 5px;
        }
    </style>
</head>
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <table id="myTable" class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Invoice Number</th>
                            <th>Customer Name</th>
                            <th>Billing Address</th>
                            <th>Invoice Date</th>
                            <th>Due Date</th>
                            <th>Description</th>
                            <th>Total Price</th>
                            <th>Payment Status</th>
                            <th>Payment Method</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>INV00 @item.applicationId</td>
                                <td>@item.userApplications.fullName</td>
                                <td>@item.userApplications.homeAddress</td>
                                <td>2024-05-15</td>
                                <td>2024-05-20</td>
                                <td>FiberX Plan 200mbps</td>
                                <td>P1500</td>
                                <td>@(item.status == 1 ? "Paid" : "Pending")</td>
                                <td>Credit Card</td>
                                <td>
                                    <button class="btn btn-primary" onclick="printInvoice(this)">Print</button>
                                    <button class="btn btn-primary" data-toggle="modal" data-target="#emailModal">Email</button>
                                    <button class="btn btn-primary" onclick="exportTable()">Download PDF</button>
                                    <button class="btn btn-primary" onclick="markAsPaid()">Mark as Paid</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailModalLabel">Email Invoice</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipientEmail">Recipient Email:</label>
                        <input type="email" class="form-control" id="recipientEmail" placeholder="Enter recipient email">
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea class="form-control" id="message" rows="3" placeholder="Enter optional message"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="sendEmail()">Send</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    window.jsPDF = window.jspdf.jsPDF;
    let table = new DataTable('#myTable');
</script>

<!-- JavaScript -->
<script>
    // Function to handle invoice email modal submission
    function sendEmail() {
        // Simulate sending email
        const recipientEmail = document.getElementById('recipientEmail').value;
        const message = document.getElementById('message').value;

        // Simulate sending email (replace with actual code)
        setTimeout(() => {
            // Show success message using SweetAlert
            Swal.fire({
                title: 'Email Sent!',
                text: `Invoice sent to ${recipientEmail}.`,
                icon: 'success',
                confirmButtonText: 'OK'
            });
        }, 1000); // Simulate sending for 1 second
    }

    function printInvoice(button) {
        // Get the parent row of the clicked button
        const row = button.parentNode.parentNode;

        // Get the data from the row
        const invoiceNumber = row.cells[0].innerText;
        const customerName = row.cells[1].innerText;
        const billingAddress = row.cells[2].innerText;
        const invoiceDate = row.cells[3].innerText;
        const dueDate = row.cells[4].innerText;
        const description = row.cells[5].innerText;
        const totalPrice = row.cells[6].innerText;
        const paymentStatus = row.cells[7].innerText;
        const paymentMethod = row.cells[8].innerText;
        // Add other relevant data as needed

        // Create HTML content for the invoice
        const invoiceHTML = `
        <div>
            <h2>Invoice Details</h2>
            <p>Invoice Number: ${invoiceNumber}</p>
            <p>Customer Name: ${customerName}</p>
            <p>Billing Address: ${billingAddress}</p>
            <p>Invoice Date: ${invoiceDate}</p>
            <p>Due Date: ${dueDate}</p>
            <p>Description: ${description}</p>
            <p>Total Price: ${totalPrice}</p>
            <p>Payment Status: ${paymentStatus}</p>
            <p>Payment Method: ${paymentMethod}</p>
            <!-- Add other relevant details here -->
        </div>
    `;

        // Open a new window with the invoice content
        const newWindow = window.open('', '_blank');
        newWindow.document.body.innerHTML = invoiceHTML;

        // Print the content
        newWindow.print();
    }

    function exportTable() {
        const doc = new jsPDF();
        doc.autoTable({ html: '#myTable' });
        doc.save('Invoice.pdf');
    }

    function markAsPaid() {

        Swal.fire({
            title: 'Email Sent!',
            text: `Invoice successfully marked as Paid!`,
            icon: 'success',
            confirmButtonText: 'OK'
        });
    }
</script>
