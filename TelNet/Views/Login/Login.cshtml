@model TelNet.userCredentials
@{
    ViewBag.Title = "Login";
}
<html>
<head>
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>
<body>
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <div class="l-form">

        <div class="form">
            <img src="~/Content/images/background.png" alt="" class="form__img">

            @using (Html.BeginForm("Login", "Login"))
            {
                @Html.AntiForgeryToken()

                <div class="form-container" style="text-align:center;">
                    <div class="form__content" style="width: 450px; background-color: #F1D1B4; padding: 60px;  border-radius: 15px; ">
                        <h1 class="form__title" style="font-family: 'Times New Roman'; font-weight: bold; color: #D16D11">Sign In</h1>

                        <div class="form__div form__div-one">
                            <div class="form__icon">
                                <i class='bx bx-user-circle'></i>
                            </div>

                            <div class="form__div-input">
                                <label for="" class="form__label">Username</label>
                                <input type="text" class="form__input" name="username"> <!-- Added name attribute -->
                            </div>
                        </div>

                        <div class="form__div">
                            <div class="form__icon">
                                <i class='bx bx-lock'></i>
                            </div>

                            <div class="form__div-input">
                                <label for="" class="form__label">Password</label>
                                <input type="password" class="form__input" name="password"> <!-- Added name attribute -->
                            </div>
                        </div>

                        <br />
                        <br />
                        <input type="submit" class="form__button" value="Login" style="color: #D16D11; background-color: #FFFF; font-weight: bold;">
                    </div>
                </div>

            }
        </div>
    </div>
    <script>
            /*===== FOCUS =====*/
            const inputs = document.querySelectorAll(".form__input")

            /*=== Add focus ===*/
            function addfocus() {
                let parent = this.parentNode.parentNode
                parent.classList.add("focus")
                console.log("focus added")
            }

            /*=== Remove focus ===*/
            function remfocus() {
                let parent = this.parentNode.parentNode
                if (this.value == "") {
                    parent.classList.remove("focus")
                    console.log("focus removed")
                }
            }

            /*=== To call function===*/
            inputs.forEach(input=> {
                input.addEventListener("focus", addfocus)
                input.addEventListener("blur", remfocus)
            })

    </script>
</body>
</html>